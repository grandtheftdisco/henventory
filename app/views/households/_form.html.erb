<div class="border-1 rounded-2xl bg-blue-200 text-xl text-left 
  justify-self-center md:shrink-0 w-110 md:w-150 pt-5 px-3 
  justify-items-center py-5">
  <%= form_with(model: household, class: "contents") do |form| %>
    <%= render partial: '/marketing/ui_errors', 
      locals: { obj: household } %>
    <div class="bg-blue-100 rounded-2xl text-left mt-3 pl-2 
      py-1 mb-5 inline-flex">
      <%= form.label :name, 'Household Name: ', class: 'font-bold' %>
      <%= form.text_field :name, class: 'font-semibold pl-2' %>
    </div>

    <div class="rounded-2xl px-3.5 py-2.5 font-bold text-white bg-lime-600 
      hover:bg-lime-blue-500 cursor-pointer">
      <%= form.submit "Save" %>
    </div>
  <% end %>
</div>