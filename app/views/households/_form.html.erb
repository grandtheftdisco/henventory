<div class="border-1 rounded-2xl bg-blue-200 text-xl text-left text-blue-950 justify-self-center md:shrink-0 w-110 md:w-150 pt-5 px-3 justify-items-center py-5">
  <%= form_with(model: household, class: "contents") do |form| %>
    <% if household.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
        <h2><%= pluralize(household.errors.count, "error") %> prohibited this household from being saved:</h2>

        <ul class="list-disc ml-6">
          <% household.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="bg-blue-100 rounded-2xl text-left mt-3 pl-2 py-1 mb-5 inline-flex">
      <%= form.label :name, 'Household Name: ', class: 'font-bold' %>
      <%= form.text_field :name, class: 'font-semibold pl-2' %>
    </div>

    <div>
      <%= form.submit "Save", class: "rounded-2xl px-3.5 py-2.5 font-bold text-white bg-lime-600 hover:bg-lime-blue-500 font-medium cursor-pointer" %>
    </div>
  <% end %>
</div>
