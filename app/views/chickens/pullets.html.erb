<p style="color: green"><%= notice %></p>

<% content_for :title, "My Pullets" %>

<h2 class="font-extrabold text-blue-700 text-3xl pb-7 uppercase">My Pullets</h2>

<div class="p-3 border border-blue-200 rounded-2xl bg-blue-100 text-lg text-blue-950 justify-self-center">
  <%= link_to "⬅️ Back to Layers", chickens_path %>
</div>

<button class="p-5 my-8 bg-lime-600 text-white font-bold rounded-2xl"><%= link_to "🐣 add new chicken", new_chicken_path %></button>

<div id="chickens" class="justify-items-center text-blue-950">
  <% @chickens.each do |chicken| %>
    <div class="py-5 bg-blue-200 md:shrink-0 w-90 md:w-120 justify-items-center rounded-2xl">
      <p class="font-bold text-2xl"><%= chicken.name %></p><br/>
      <% if chicken.image_url %>
        <%= image_tag(chicken.image_url, width: 300 ) %>
      <% end %>
      <p class="text-blue-800 font-semibold hover:font-bold text-lg"><br/>
        <%= link_to "🗒️ Details", chicken %>
      </p>
    </div>
    <br/>
  <% end %>
</div>